<div class="pane two-columns">
  <div>
    <h1>Account</h1>

    <p>If you want to update anything about your Roboclaus account, just fill the form to the right.</p>

    <div class="devise-links">
      Not feeling this Christmas thing any more? Click <%= link_to "here", registration_path(resource_name), data: { confirm: "Are you sure? This is permanent, and will result in your secret santa being reassigned." }, method: :delete %> to delete your account.
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'R. Claus' %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autocomplete: "email", placeholder: 'santa@robocla.us' %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_area :address, autocomplete: "address", placeholder: "123 Christmas Road\nSantaville\nLapland\nW1A 1AA", rows: 4 %>
  </div>

  <div class="field">
    <%= f.label :password, "New password (minimum 8 characters, leave blank to not change)" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Re-enter your new password" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
</div>
